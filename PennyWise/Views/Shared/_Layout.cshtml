            <div class="sidebar-footer">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <small class="text-muted">Logged in as</small>
                        <span class="badge bg-dark border border-secondary text-light">@User.Identity.Name</span>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-glass w-100 btn-sm">Sign Out</button>
                    </form>
                }
                else
                {
                    <div class="d-grid gap-2">
                        <a class="btn btn-modern btn-primary-glow btn-sm justify-content-center" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="btn btn-glass btn-sm justify-content-center" asp-controller="Account" asp-action="Register">Sign Up</a>
                    </div>
                }
            </div>
        </aside>

        <!-- Main Content -->
        <main class="app-main">
            @RenderBody()
        </main>
