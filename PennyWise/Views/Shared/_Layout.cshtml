    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function() {
            // SPA-like navigation for sidebar and bottom nav
            $('.nav-link, .bottom-nav-item').on('click', function(e) {
                var href = $(this).attr('href');
                if (href && href !== '#' && !$(this).hasClass('no-ajax')) {
                    e.preventDefault();
                    
                    // Update active state
                    $('.nav-link, .bottom-nav-item').removeClass('active');
                    
                    // Find matching links in both nav bars and mark active
                    var controller = $(this).attr('href').split('/')[1];
                    $('.nav-link, .bottom-nav-item').each(function() {
                        if ($(this).attr('href').indexOf(controller) > -1) {
                            $(this).addClass('active');
                        }
                    });
                    
                    // Use the global function defined in site.js
                    if (window.updatePageContent) {
                        window.updatePageContent(href);
                    } else {
                        window.location.href = href;
                    }
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
