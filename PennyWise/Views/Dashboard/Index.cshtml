@model PennyWise.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    var currency = ViewBag.CurrencySymbol as string ?? "$";
    var monthName = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month);
}

<!-- Modern Month Selector Bar -->
<div class="glass-card month-selector-card mb-3 mb-md-4 p-2 p-md-3">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2 gap-md-3">
        <!-- Title - Hidden on mobile, shown on desktop -->
        <div class="d-none d-md-block">
            <h1 class="h4 mb-1 fw-bold">@monthName @Model.Year</h1>
            <p class="text-muted small mb-0">Financial Overview</p>
        </div>
        
        <!-- Month Navigation - Compact on mobile, normal on desktop -->
        <div class="d-flex align-items-center gap-2 w-100 w-md-auto">
            <button class="btn btn-glass btn-sm px-2" onclick="navigateMonth(-1)">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                </svg>
            </button>
            
            <div class="dropdown month-dropdown-container flex-grow-1 flex-md-grow-0">
                <button class="btn btn-glass dropdown-toggle w-100 text-start d-flex justify-content-between align-items-center px-2 px-md-3" style="min-width: 160px;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="fw-medium">@monthName @Model.Year</span>
                </button>
                <ul class="dropdown-menu month-dropdown-menu">
                    @for (int i = 1; i <= 12; i++)
                    {
                        var isFuture = (Model.Year == DateTime.Now.Year && i > DateTime.Now.Month) || (Model.Year > DateTime.Now.Year);
                        if (!isFuture)
                        {
                            <li>
                                <a class="dropdown-item text-white @(i == Model.Month ? "active" : "")" href="javascript:void(0)" onclick="updatePageContent('@Url.Action("Index", "Dashboard")?month=@i&year=@Model.Year')">
                                    @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
            
            <button class="btn btn-glass btn-sm px-2" onclick="navigateMonth(1)" @(Model.Year == DateTime.Now.Year && Model.Month == DateTime.Now.Month ? "disabled" : "")>
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                </svg>
            </button>
        </div>
    </div>
</div>

<!-- Quick Stats Cards -->
<div class="row g-2 g-md-3 mb-3 mb-md-4">
    <div class="col-6 col-md-3">
        <div class="glass-card h-100 p-3">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <small class="text-muted text-uppercase" style="font-size: 0.7rem; letter-spacing: 0.5px;">Income</small>
                <span class="chip chip-success" style="font-size: 0.65rem; padding: 2px 6px;">+Flow</span>
            </div>
            <div class="h5 mb-0 fw-bold text-success" id="income-value">@string.Format("{0}{1:N0}", currency, Model.Income)</div>
            <button class="btn btn-link p-0 text-muted mt-2" style="font-size: 0.75rem;" data-bs-toggle="modal" data-bs-target="#incomeModal">
                <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                </svg>
                Edit
            </button>
        </div>
    </div>
    
    <div class="col-6 col-md-3">
        <div class="glass-card h-100 p-3">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <small class="text-muted text-uppercase" style="font-size: 0.7rem; letter-spacing: 0.5px;">Budgeted</small>
                <span class="chip chip-neutral" style="font-size: 0.65rem; padding: 2px 6px;">Plan</span>
            </div>
            <div class="h5 mb-0 fw-bold">@string.Format("{0}{1:N0}", currency, Model.TotalAllocated)</div>
            <button class="btn btn-link p-0 text-muted mt-2" style="font-size: 0.75rem;" data-bs-toggle="modal" data-bs-target="#budgetModal">
                <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                </svg>
                Allocate
            </button>
        </div>
    </div>
    
    <div class="col-6 col-md-3">
        <div class="glass-card h-100 p-3">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <small class="text-muted text-uppercase" style="font-size: 0.7rem; letter-spacing: 0.5px;">Spent</small>
                <span class="chip chip-danger" style="font-size: 0.65rem; padding: 2px 6px;">-Flow</span>
            </div>
            <div class="h5 mb-0 fw-bold text-danger">@string.Format("{0}{1:N0}", currency, Model.TotalSpent)</div>
            <a href="@Url.Action("Index", "Expense", new { month = Model.Month, year = Model.Year })" class="btn btn-link p-0 text-muted mt-2" style="font-size: 0.75rem;">
                <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                    <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zM2.5 2a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3zm6.5.5A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3zM1 10.5A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3zm6.5.5A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3z"/>
                </svg>
                View All
            </a>
        </div>
    </div>
    
    <div class="col-6 col-md-3">
        <div class="glass-card h-100 p-3" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(6, 182, 212, 0.1)); border-color: rgba(99, 102, 241, 0.3);">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <small class="text-muted text-uppercase" style="font-size: 0.7rem; letter-spacing: 0.5px;">Balance</small>
                <span class="chip @(Model.BalanceLeft >= 0 ? "chip-success" : "chip-danger")" style="font-size: 0.65rem; padding: 2px 6px;">Net</span>
            </div>
            <div class="h5 mb-0 fw-bold @(Model.BalanceLeft >= 0 ? "text-success" : "text-danger")">@string.Format("{0}{1:N0}", currency, Model.BalanceLeft)</div>
            <small class="text-muted d-block mt-2" style="font-size: 0.7rem;">Available funds</small>
        </div>
    </div>
</div>

<!-- Budget Performance Table -->
<div class="glass-card mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3 p-3 pb-0">
        <h5 class="mb-0 fw-bold">Budget Performance</h5>
        <span class="chip chip-neutral">@Model.CategorySummaries.Count Categories</span>
    </div>
    
    <div class="table-responsive">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>Category</th>
                    <th class="text-end d-none d-md-table-cell">Budget</th>
                    <th class="text-end">Spent</th>
                    <th class="text-end d-none d-sm-table-cell">Left</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.CategorySummaries.Any())
                {
                    @foreach (var c in Model.CategorySummaries)
                    {
                        <tr>
                            <td class="fw-medium">@c.CategoryName</td>
                            <td class="text-end text-muted d-none d-md-table-cell">@string.Format("{0}{1:N0}", currency, c.Allocated)</td>
                            <td class="text-end">@string.Format("{0}{1:N0}", currency, c.Spent)</td>
                            <td class="text-end @(c.Remaining < 0 ? "text-danger" : "text-success") d-none d-sm-table-cell">
                                @string.Format("{0}{1:N0}", currency, c.Remaining)
                            </td>
                            <td class="text-center">
                                @if (c.IsOverspent)
                                {
                                    <span class="chip chip-danger" style="font-size: 0.7rem;">Over</span>
                                }
                                else
                                {
                                    <span class="chip chip-success" style="font-size: 0.7rem;">OK</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <div class="mb-2">No budget categories found.</div>
                            <a href="@Url.Action("Categories", "Budget")" class="btn btn-modern btn-primary-glow btn-sm">
                                Create Categories
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Floating Add Expense Button (Mobile) -->
<a href="@Url.Action("Create", "Expense")" class="btn btn-modern btn-primary-glow d-md-none" 
   style="position: fixed; bottom: 20px; right: 20px; border-radius: 50%; width: 56px; height: 56px; padding: 0; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(236, 72, 153, 0.4); z-index: 1000;">
    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
    </svg>
</a>

<!-- Income Edit Modal -->
<div class="modal fade" id="incomeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: rgba(15, 23, 42, 0.98); border: 1px solid rgba(148, 163, 184, 0.2); backdrop-filter: blur(20px);">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Set Monthly Income</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="incomeForm" method="post" action="@Url.Action("SaveIncome", "Dashboard")">
                <div class="modal-body">
                    <input type="hidden" name="Month" value="@Model.Month" />
                    <input type="hidden" name="Year" value="@Model.Year" />
                    
                    <div class="mb-3">
                        <label class="form-label text-muted small text-uppercase fw-bold">Total Expected Income</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0 text-muted" style="border-color: rgba(148, 163, 184, 0.1);">@currency</span>
                            <input type="number" step="0.01" name="Amount" value="@Model.Income" class="form-control border-start-0 ps-1" placeholder="0.00" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-glass" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-modern btn-primary-glow">Save Income</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Budget Allocation Modal -->
<div class="modal fade" id="budgetModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="background: rgba(15, 23, 42, 0.98); border: 1px solid rgba(148, 163, 184, 0.2); backdrop-filter: blur(20px);">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Allocate Budget</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="budgetForm" method="post" action="@Url.Action("SaveBudget", "Dashboard")">
                <div class="modal-body">
                    <input type="hidden" name="Month" value="@Model.Month" />
                    <input type="hidden" name="Year" value="@Model.Year" />
                    
                    @if (Model.CategorySummaries.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th class="text-white">Category</th>
                                        <th class="text-white text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.CategorySummaries.Count; i++)
                                    {
                                        var cat = Model.CategorySummaries[i];
                                        <tr>
                                            <td class="text-white">@cat.CategoryName</td>
                                            <td>
                                                <input type="hidden" name="Items[@i].CategoryId" value="@cat.CategoryId" />
                                                <div class="input-group input-group-sm">
                                                    <span class="input-group-text bg-transparent border-end-0 text-muted" style="border-color: rgba(148, 163, 184, 0.1);">@currency</span>
                                                    <input type="number" step="0.01" name="Items[@i].AllocatedAmount" value="@cat.Allocated" class="form-control border-start-0 ps-1 text-end" placeholder="0.00" />
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No categories found. Please create categories first in Settings.
                        </div>
                    }
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-glass" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-modern btn-primary-glow">Save Budget</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function navigateMonth(direction) {
        var currentMonth = @Model.Month;
        var currentYear = @Model.Year;
        var now = new Date();
        
        var newMonth = currentMonth + direction;
        var newYear = currentYear;
        
        if (newMonth > 12) {
            newMonth = 1;
            newYear++;
        } else if (newMonth < 1) {
            newMonth = 12;
            newYear--;
        }
        
        // Prevent future months
        if (newYear > now.getFullYear() || (newYear === now.getFullYear() && newMonth > (now.getMonth() + 1))) {
            return;
        }
        
        updatePageContent('@Url.Action("Index", "Dashboard")?month=' + newMonth + '&year=' + newYear);
    }
    
    // Handle form submissions via AJAX
    $('#incomeForm').on('submit', function(e) {
        e.preventDefault();
        $.post($(this).attr('action'), $(this).serialize(), function() {
            $('#incomeModal').modal('hide');
            updatePageContent('@Url.Action("Index", "Dashboard")?month=@Model.Month&year=@Model.Year');
        });
    });
    
    $('#budgetForm').on('submit', function(e) {
        e.preventDefault();
        $.post($(this).attr('action'), $(this).serialize(), function() {
            $('#budgetModal').modal('hide');
            updatePageContent('@Url.Action("Index", "Dashboard")?month=@Model.Month&year=@Model.Year');
        });
    });
</script>
