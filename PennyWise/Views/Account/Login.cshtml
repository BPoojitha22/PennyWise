@model PennyWise.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-12 col-md-6 col-lg-5 col-xl-4">
        <div class="text-center mb-5">
            <h1 class="display-6 fw-bold mb-2">Welcome Back</h1>
            <p class="text-muted">Enter your credentials to access your finance dashboard.</p>
        </div>
        
        <div class="glass-card mb-4" style="border-top: 4px solid var(--primary);">
            <form asp-action="Login" method="post" class="p-2">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <input type="hidden" asp-for="ReturnUrl" />
                
                <div class="mb-4">
                    <label asp-for="UserName" class="form-label text-uppercase small fw-bold text-muted">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger small mt-1 d-block"></span>
                </div>
                
                <div class="mb-4">
                    <div class="d-flex justify-content-between">
                        <label asp-for="Password" class="form-label text-uppercase small fw-bold text-muted">Password</label>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                </div>
                
                <button type="submit" class="btn btn-modern btn-primary-glow w-100 justify-content-center mt-2">
                    Sign In
                </button>
            </form>
        </div>
        
        <p class="text-center text-muted small">
            Don't have an account? 
            <a asp-action="Register" class="text-white text-decoration-none fw-medium">Create account</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

